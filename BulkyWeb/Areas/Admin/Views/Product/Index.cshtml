@model List<Product>

<div class="container shadow-lg p-5 rounded bg-light" style="max-width: 1200px;">
	<div class="row pt-4 pb-3">
		<div class="col-12 d-flex justify-content-between align-items-center">
			<h2 class="text-primary">Product List</h2>
			<a asp-controller="Product" asp-action="Upsert" class="btn btn-primary rounded-pill shadow-lg px-4 py-2">
				<i class="bi bi-patch-plus"></i> Add new product
			</a>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<div class="table-responsive">
				<table id="tblData" class="table table-bordered table-striped table-hover shadow-sm rounded" style="width:100%">
					<thead class="thead-dark bg-dark text-light">
						<tr>
							<th>Title</th>
							<th>ISBN</th>
							<th>Price</th>
							<th>Author</th>
							<th>Category</th>
							<th></th>
						</tr>
					</thead>
				
				</table>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/product.js"></script>
}
