@model List<Category>

<div class="container shadow-lg p-5 rounded bg-light">
    <div class="row pt-4 pb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="text-primary">Category List</h2>
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary rounded-pill shadow-lg px-4 py-2">
                <i class="bi bi-patch-plus"></i> Create New Category
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered table-striped table-hover shadow-sm rounded">
                <thead class="thead-dark bg-dark text-light">
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary rounded-pill shadow-lg px-4 py-2 d-flex align-items-center me-2">
                                        <i class="bi bi-pencil-square me-2"></i> Edit
                                    </a>

                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger rounded-pill shadow-lg px-4 py-2 d-flex align-items-center">
                                        <i class="bi bi-trash me-2"></i> Delete
                                    </a>


                                </div>
                            </td>
                        </tr>
                    }
                    @* Handle the case when the model is empty *@
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">
                                No categories available.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
