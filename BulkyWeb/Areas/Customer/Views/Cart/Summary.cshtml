@model ShoppingCartVM

<form method="post">
    <br />
    <div class="container rounded-3">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-gradient text-light py-4" style="background: linear-gradient(45deg, #6a11cb, #2575fc);">
                <div class="row px-4">
                    <div class="col-6">
                        <h5 class="fw-bold text-white">Order Summary</h5>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="Index" class="btn btn-outline-danger btn-sm px-3 py-1 shadow-sm rounded-3">Back to Cart</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <h5 class="fw-bold text-primary">Shipping Details</h5>

                            <div class="row my-2">
                                <div class="col-3">
                                    <label class="fw-semibold">Name</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.Name" class="form-control rounded-3" />
                                    <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col-3">
                                    <label class="fw-semibold">Phone</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.PhoneNumber" class="form-control rounded-3" />
                                    <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col-3">
                                    <label class="fw-semibold">Street Address</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.StreetAddress" class="form-control rounded-3" />
                                    <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col-3">
                                    <label class="fw-semibold">City</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.City" class="form-control rounded-3" />
                                    <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col-3">
                                    <label class="fw-semibold">State</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.State" class="form-control rounded-3" />
                                    <span asp-validation-for="OrderHeader.State" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col-3">
                                    <label class="fw-semibold">Postal Code</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.PostalCode" class="form-control rounded-3" />
                                    <span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h5 class="fw-bold text-primary">Order Summary</h5>
                            <ul class="list-group mb-3">
                                @foreach (var details in Model.ShoppingCartList)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong class="text-uppercase">@details.Product.Title</strong>
                                            <small class="text-muted">Qty: @details.Count</small>
                                        </div>
                                        <span class="fw-bold text-dark">@((details.Price * details.Count).ToString("C"))</span>
                                    </li>
                                }
                                <li class="list-group-item d-flex justify-content-between align-items-center bg-light">
                                    <strong>Total (USD)</strong>
                                    <span class="fw-bold text-info">@Model.OrderHeader.OrderTotal.ToString("C")</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light border-0">
                <div class="row">
                    <div class="col-md-8 pt-2">
                        <small class="text-muted">
                            Estimate Arrival Date: @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
                        </small>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary w-100 shadow-sm rounded-3">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
