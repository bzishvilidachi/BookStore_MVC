@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
 
<div class="container ">
	<div class="row pt-4 pb-3 ">
		<div class="col-12 d-flex justify-content-between align-items-center ">
			<h2 class="text-primary">Category List</h2>
			<a asp-page="/Categories/Create" class="btn btn-primary rounded-4">
				<i class="bi bi-patch-plus"></i> Create New Category
			</a>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Category Name</th>
						<th>Display Order</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var obj in Model.CategoryList)
					{
						<tr>
							<td>@obj.Name</td>
							<td>@obj.DisplayOrder</td>
							<td>
								<div class="w-75 btn-group" role="group">
									<a asp-page="/Categories/Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2 rounded-4">
										<i class="bi bi-pencil-square"></i>Edit
									</a>

									<a asp-page="/Categories/Delete"  asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2 rounded-4">
										<i class="bi bi-trash"></i>Delete
									</a>



								</div>
							</td>
						</tr>

					}
				</tbody>
			</table>
		</div>
	</div>
</div>